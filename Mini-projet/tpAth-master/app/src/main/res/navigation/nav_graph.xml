<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.tplogin.ui.DashboardFragment"
        tools:layout="@layout/fragment_dashbord"
        android:label="Welcome" >
        <action
            android:id="@+id/action_dashboardFragment_to_userListFragment"
            app:destination="@id/userListFragment" />
    </fragment>
    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.tplogin.ui.UserListFragment"
        tools:layout="@layout/fragment_users_list"
        android:label="Users" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.tplogin.ui.ProfileFragment"
        android:label="Profiles" />
</navigation>